#! /usr/bin/make -f
# (C) 2001, Eric Delaunay

include /usr/share/quilt/quilt.make

build: build-stamp
build-stamp: $(QUILT_STAMPFN)
	dh_testdir
	./autogen.sh
	./configure --prefix=/usr --mandir=/usr/share/man
	$(MAKE) all CC=$(CC) CFLAGS="$(CFLAGS)"
	touch $@

clean: unpatch
	dh_testdir
	dh_testroot
	rm -f build-stamp
	[ ! -f Makefile ] || $(MAKE) distclean
	dh_clean

binary: binary-arch binary-indep

binary-indep:
# nothing to do for arch independent binary packages

binary-arch: build
	dh_testdir
	dh_testroot
	dh_clean -k
	$(MAKE) install DESTDIR=`pwd`/debian/ethtool
	dh_strip
	dh_installman ethtool.8
	dh_installdocs AUTHORS NEWS README
	dh_installchangelogs ChangeLog
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

source diff:                                                                  
	@echo >&2 'source and diff are obsolete - use dpkg-source -b'; false

.PHONY: binary-arch binary-indep binary build clean
