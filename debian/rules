#! /usr/bin/make -f
# (C) 2001, Eric Delaunay

CC=gcc
CFLAGS=-O2

a=$(shell dpkg --print-architecture)
p=ethtool

build: build-stamp
build-stamp:
	dh_testdir
	./configure --prefix=/usr --mandir=/usr/share/man --enable-compat
	$(MAKE) all CC=$(CC) CFLAGS="$(CFLAGS)"
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	-$(MAKE) distclean
	dh_clean

binary: binary-arch binary-indep

binary-indep:
# nothing to do for arch independent binary packages

binary-arch: build
	dh_testdir
	dh_testroot
	dh_clean -k
	# install binaries
	$(MAKE) install DESTDIR=`pwd`/debian/tmp
	# install documentation
	dh_installmanpages
	dh_installdocs AUTHORS INSTALL NEWS README
	dh_installchangelogs ChangeLog
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

source diff:                                                                  
	@echo >&2 'source and diff are obsolete - use dpkg-source -b'; false

.PHONY: binary-arch binary-indep binary build clean
